<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.employment.mapper.UserMapper">

    <select id="findById" resultType="com.example.employment.entity.User">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="findByUsername" resultType="com.example.employment.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="findAll" resultType="com.example.employment.entity.User">
        SELECT * FROM user ORDER BY create_time DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(username, password, role, create_time, update_time)
        VALUES (#{username}, #{password}, #{role}, NOW(), NOW())
    </insert>

    <update id="update">
        UPDATE user
        SET username = #{username},
            password = #{password},
            role = #{role},
            update_time = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM user WHERE id = #{id}
    </delete>

</mapper>