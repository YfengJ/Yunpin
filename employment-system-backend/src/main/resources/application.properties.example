# 服务器配置
server.port=8080
# ? ?????? (?? D ???????)
file.upload.path=D:/employment_system_files/
# ????????? 10MB
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
# 数据库配置
# 注意：数据库名 'employment_system' 需要先在MySQL中创建
spring.datasource.url=jdbc:mysql://localhost:3306/employment_system?useUnicode=true&characterEncoding=utf-8&useSSL=false&serverTimezone=Asia/Shanghai
spring.datasource.username=你的用户名
# 请根据实际情况修改 MySQL 密码
spring.datasource.password=你的密码
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
# 数据源类型（HikariCP是Spring Boot默认的连接池）
spring.datasource.type=com.zaxxer.hikari.HikariDataSource

# MyBatis 配置
# 1. 开启驼峰命名 (数据库 user_name -> Java userName)
mybatis.configuration.map-underscore-to-camel-case=true
# 2. 告诉系统 XML 文件在哪里 (这一步至关重要，否则报错 Invalid bound statement)
mybatis.mapper-locations=classpath:mapper/*.xml
# 3. 实体类包路径（可选，用于简化XML中的类型引用）
mybatis.type-aliases-package=com.example.employment.entity
# 4. 打印 SQL 日志 (方便调试，看到程序发出的 SQL)
mybatis.configuration.log-impl=org.apache.ibatis.logging.stdout.StdOutImpl
